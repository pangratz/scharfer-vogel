<Window x:Class="SharpTwitter.TwitterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SharpTwitter" Height="400" Width="300">
    <Grid>
        <TextBox Margin="12,0,12,18" Name="tweetTextBox" VerticalAlignment="Bottom" TextChanged="tweetMessageChanged" TextWrapping="Wrap" AcceptsReturn="True" PreviewKeyDown="keyPressed" />
        <Label Content="140" Height="28" Margin="247,0,-4,-9" Name="charactersLeftLabel" FontSize="8" IsEnabled="True" VerticalAlignment="Bottom" />
    </Grid>
</Window>
